<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/appCompatButton_try_again"
        style="@style/AppTheme.Button"
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:drawableEndCompat="@drawable/ic_replay_black_24dp"
        app:drawableRightCompat="@drawable/ic_replay_black_24dp"
        android:paddingEnd="@dimen/global_padding"
        android:paddingRight="@dimen/global_padding"
        android:text="@string/title_retry" />

</LinearLayout>